void mark_board()
{
  int n;
  num: scanf("%d",&n);
  t++;
  if(n<1||n>9)
  {
  	printf("Invalid move");
  	goto num;
  	if(t%2==0)
    a[n]='O';
    else
    a[n]='X';
  }
}
